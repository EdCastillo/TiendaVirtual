                                    <a class="dropdown-item" href="#">Configuracion</a>
                                    <a class="dropdown-item" href="~/login/logout">Cerrar Sesion</a>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
        </nav>
    </div>

    @RenderBody()


</body>
